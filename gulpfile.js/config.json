{

      "root":"./site",
      "push":"../gh-pages/",

      "base":{

          "src":"/dev",
          "dest":"/dist"
        },

      "htmlFolder": {

          "src":"/html"
      },

      "stylesFolder": {

          "src":"/styles",
          "dest":"/css"
      },

      "imgFolder":{

          "src":"/img",
          "dest":"/img"
      },

      "scriptsFolder":{

          "src":"/scripts",
          "dest":"/scripts"

      },

      "tasks" :{

        "browserSync": {

            "server": {

              "baseDir": "./site/dist"
            },

            "ui": {

              "port": "8080"
            },

            "logPrefix":"Portfolio Site",

            "browser": ["firefox"],

            "online": "false"

        },

        "html":{
            "src":"/templates/",
            "templates": "/pages/*.html",
            "layout":"/templates/layout.html",
            "partials": "/templates/partials/*.html",
            "macros":"/templates/macros/*.html",
            "jsonData": "/data/data.json"
        },

        "scss":{

            "src": "/**/*.{scss,css}"
        },

        "img":{

            "src":"/**/*"
        },

        "js":{

            "src" : "/js/**/*.js"
        },

        "fonts":{

            "src" : "fonts/*",
            "dest" : "fonts"
        },

        "cv":{

          "src":"cv/*",
          "dest":"cv"
        }

      }

}